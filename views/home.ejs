<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Homepage</title>
</head>

<body>

    <%- include('./partials/navbar') %>


        <div class="container">
            <div class="mt-4 row row-cols-4">
                <% blogs.forEach(blog=> { %>
                    <div class="card col m-3" style="width: 18rem; height:340px; ">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= blog.title %>
                            </h5>
                            <p class="card-text" style="height: 60px; overflow:hidden;">
                                <%= blog.body %>
                            </p>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>

        <%- include('./partials/scripts') %>
</body>

</html>